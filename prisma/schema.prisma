generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String        @id @default(uuid())
  userId     String        @unique // Clerk user ID
  email      String
  avatar     String?
  credits    Int           @default(0)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  expenses   ExpenseUser[]
  categories Category[]
  currencies Currency[]
  budgets    UserBudget[] // New relation to user budgets

  @@map("users")
}

// New model for user budgets
model UserBudget {
  id        String   @id @default(uuid())
  amount    Int
  currency  String
  date      DateTime
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@map("user_budgets")
}

model Category {
  id        String          @id @default(uuid())
  title     String
  budget    CategoryBudget? // Changed to reference the CategoryBudget model
  user      User            @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  expenses  Expense[]
  createdAt DateTime        @default(now())

  @@map("categories")
}

// New model for category budgets
model CategoryBudget {
  id         String   @id @default(uuid())
  amount     Int
  currency   String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String   @unique // One-to-one relationship
  createdAt  DateTime @default(now())

  @@map("category_budgets")
}

model Currency {
  id        String   @id @default(uuid())
  title     String
  symbol    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@map("currencies")
}

model Expense {
  id          String        @id @default(uuid())
  date        DateTime
  description String
  amount      Decimal       @db.Decimal(10, 2)
  currency    String
  location    String
  notes       String?
  receipt     String?
  category    Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId  String?
  users       ExpenseUser[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("expenses")
}

model ExpenseUser {
  user      User    @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  expenseId String

  @@id([userId, expenseId])
  @@map("expense_users")
}
