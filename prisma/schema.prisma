generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String        @id @default(uuid())
  userId     String        @unique // Clerk user ID
  email      String
  avatar     String?
  credits    Int           @default(0)
  budget     Int           @default(0) // Added budget field
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  expenses   ExpenseUser[]
  categories Category[]
  currencies Currency[]

  @@map("users")
}

model Category {
  id        String    @id @default(uuid())
  title     String
  budget    Int       @default(0) // Added budget field
  user      User      @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  expenses  Expense[]
  createdAt DateTime  @default(now())

  @@map("categories")
}

model Currency {
  id        String   @id @default(uuid())
  title     String
  symbol    String
  user      User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@map("currencies")
}

model Expense {
  id          String        @id @default(uuid())
  date        DateTime
  description String
  amount      Decimal       @db.Decimal(10, 2)
  currency    String
  location    String
  notes       String?
  receipt     String?
  category    Category?     @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId  String?
  users       ExpenseUser[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("expenses")
}

model ExpenseUser {
  user      User    @relation(fields: [userId], references: [userId], onDelete: Cascade)
  userId    String
  expense   Expense @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  expenseId String

  @@id([userId, expenseId])
  @@map("expense_users")
}
